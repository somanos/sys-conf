{
  "name": "@somanos/sys-conf",
  "version": "1.0.0",
  "description": "Light weight Linux system configurator",
  "main": "index.js",
  "scripts": {
    "test": "node index.js --data=./data --conflict-policy=skip --templates=./examples --output=/tmp/sys-conf"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:somanos/sys-conf.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/somanos/sys-conf",
	"keywords": [
		"etc",
		"configure",
		"system",
		"templates"
	],
	"author": {
		"name": "Somanos Sar",
		"email": "somanos@drmee.com",
		"url": "https://drumee.com"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": true,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows"
		]
	},
  "dependencies": {
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.21",
    "yargs": "^17.7.2"
  }
}
